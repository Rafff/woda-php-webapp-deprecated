{% extends 'WodaUIBundle::layout_admin.html.twig' %}

{% block content %}
    <table class="table table-striped">
        <colgroup>
            <col width="100" />
            <col width="*" />
            <col width="200" />
        </colgroup>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom d'utilisateur</th>
                <th>Adresse email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>#{{ user.id }}</td>
                    <td>
                        <a href="{{ path('WodaUserBundle.Admin.edit', { id: user.id }) }}">{{ user.username }}</a>
                    </td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('WodaFSBundle.Admin.tree', { user: user.id }) }}">Arborescence</a>
                        |
                        <a href="{{ path('WodaUserBundle.Admin.remove', { id: user.id }) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
