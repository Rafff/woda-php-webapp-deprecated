{% extends 'WodaUIBundle::layout_admin.html.twig' %}

{% block content %}
    <table class="table table-striped">
        <colgroup>
            <col width="100" />
            <col width="*" />
        </colgroup>
        <thead>
            <tr>
                <th>ID</th>
                <th>Adresse email</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>#{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
