            <a href="#_user_" data-toggle="tab">
                <img src="{{ asset('bundles/wodaui/img/icons/friends-32.png') }}" alt="user" width="16px" height="16px" />
                <span>Users</span>
                <span class="counter">{% if (type == 'user') %} {{ count }} {% else %} 0 {% endif %}</span>
            </a>
        </li>
    </ul>
{% endblock %}