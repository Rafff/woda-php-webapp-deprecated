<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Woda</title>
        <link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/css/bootstrap-combined.min.css" rel="stylesheet" />
        <script type="text/javascript" src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
        <script type="text/javascript" src="http://code.jquery.com/ui/1.9.1/jquery-ui.js"></script>
        <script type="text/javascript" src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.1/themes/base/jquery-ui.css" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/wodaui/css/style_min.css') }}" />
        <style>
            {% block style %}
            {% endblock %}
        </style>
    </head>
    <body>
	<div class="navbar navbar-inverse navbar-fixed-top">
    	<div class="navbar-inner">
        	<div class="container">
		   		<a class="brand" href="{{ path('WodaCmsBundle.Content.index') }}">
           			<img src="{{ asset('bundles/wodaui/img/logo.png') }}" alt="logo" width="80px" height="0px" />
           		</a> 
          		<div class="nav pull-right">						
         	                  	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('WodaAdminBundle.Default.index') }}"><img src="{{ asset('bundles/wodaui/img/icons/admin-32.png') }}" width="16px" height="16px" alt="administration"/>&nbsp;</a>
                                {% endif %}
                                <a class="btn" href="{{ path('WodaUserBundle.Account.index') }}"><b>My panel</b></a>
                                <a class="btn" href="{{ path('WodaUserBundle.Account.index') }}"><img src="{{ asset('bundles/wodaui/img/icons/setting-32.png') }}" width="16px" height="16px" alt="account settings"/>&nbsp;</a>
                                <a class="btn btn-danger" href="{{ path('WodaUserBundle.Security.logout') }}">Sign out</a>
                            {% else %}
                                <a class="btn btn-danger" href="{{ path('WodaUserBundle.Register.index') }}">Sign up</a>
                            {% endif %}
				</div>
				<div id ="login" class="span4">
                    {% block content %}
                    {% endblock %}
    			</div>   
	     	</div>
      	</div>	

    </div>	
	
	<div id ="download">
		<div style="float:left;width:230px">
		<img src="../mbp.png">
		</div>
		<div class="legend" id="slogan">
		<p style="padding-top:40px;padding-right:60px;">Simple storage</p>
		<p	>Simple sharing ...</p>
		</div>
	</div>
	<div id="download-button">
		<a class="btn btn-large btn-primary" href="#">Download</a>
		<p style="color: #646464"><i>Mac, Linux and Windows</i></p>
	</div
	            
    </body>
</html>
        

