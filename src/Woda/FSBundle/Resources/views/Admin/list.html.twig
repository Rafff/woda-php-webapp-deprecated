{% extends 'WodaUIBundle::layout_admin.html.twig' %}

{% block content %}
    <table class="table table-striped">
        <colgroup>
            <col width="100" />
            <col width="*" />
        </colgroup>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom d'utilisateur</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>#{{ user.id }}</td>
                    <td>
                        <a href="{{ path('WodaFSBundle.Admin.tree', { user : user.id, folder : null }) }}">{{ user.username }}</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
